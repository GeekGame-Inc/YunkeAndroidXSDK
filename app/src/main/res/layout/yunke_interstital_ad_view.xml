<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/root_container"
    android:layout_gravity="center">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/insert_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/yunke_ic_default_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/insert_ad_desc"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:layout_height="40dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/insert_ad_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_vertical|top|left"
            android:gravity="center|left"
            android:paddingHorizontal="10dp"

             />

        <ImageView
            android:id="@+id/insert_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|top|right"
            android:background="@drawable/yunke_dislike_icon" />

        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="50dp"
            android:text="@string/ad_view_desc"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/yunke_common_black_view"
            android:layout_gravity="center_vertical|bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>


</RelativeLayout>