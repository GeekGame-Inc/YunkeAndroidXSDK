<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <!--<solid android:color="@color/color_blue_normal" />-->
            <stroke android:width="2px" android:color="@color/color_blue_normal"/>
            <corners android:radius="10dp" />
            <padding
                android:bottom="3dp"
                android:left="8dp"
                android:right="8dp"
                android:top="3dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <!--<solid android:color="@color/color_blue_normal" />-->
